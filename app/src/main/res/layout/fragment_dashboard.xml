<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="myViewModel"
            type="com.redbu11.langlearnapp.ui.dashboard.DashboardViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.dashboard.DashboardFragment"
        android:background="#10000000"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="0dp"
            android:orientation="vertical"
            tools:context=".MainActivity">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="#CC202020"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:cardMaxElevation="2dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="false"
                android:layout_marginBottom="20dp"
                >

                <ScrollView
                    android:id="@+id/phrase_creator_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible"
                        tools:context=".MainActivity">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/phrase_lang"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="15dp"
                                android:layout_marginBottom="5dp"
                                android:layout_weight="1"
                                android:ems="10"
                                android:gravity="center"
                                android:hint="@string/dashboard_input_hint_phrase_language"
                                android:inputType="textPersonName"
                                android:text="@={myViewModel.inputPhraseLang}"
                                style="@style/TextAppearance.LangLearnApp.PhraseCreationEditText"
                                />

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="0.2"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_dashboard_black_24dp">

                            </ImageView>

                            <EditText
                                android:id="@+id/translation_lang"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="15dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_weight="1"
                                android:ems="10"
                                android:gravity="center"
                                android:hint="@string/dashboard_input_hint_translation_language"
                                android:inputType="textPersonName"
                                android:text="@={myViewModel.inputTranslationLang}"
                                style="@style/TextAppearance.LangLearnApp.PhraseCreationEditText"
                                />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/phrase_text_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="15dp"
                            android:ems="10"
                            android:text="@string/dashboard_input_title_phrase_text"
                            android:textSize="12sp"
                            style="@style/TextAppearance.LangLearnApp.PhraseCreationTitleText"
                            />

                        <EditText
                            android:id="@+id/phrase_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="15dp"
                            android:layout_marginBottom="5dp"
                            android:ems="10"
                            android:hint="@string/dashboard_input_hint_phrase_text"
                            android:inputType="textPersonName"
                            android:text="@={myViewModel.inputPhraseText}"
                            style="@style/TextAppearance.LangLearnApp.PhraseCreationEditText"
                            />

                        <TextView
                            android:id="@+id/translation_text_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="15dp"
                            android:ems="10"
                            android:text="@string/dashboard_input_title_translation_text"
                            android:textSize="12sp"
                            style="@style/TextAppearance.LangLearnApp.PhraseCreationTitleText"
                            />

                        <EditText
                            android:id="@+id/translation_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="15dp"
                            android:layout_marginBottom="5dp"
                            android:ems="10"
                            android:hint="@string/dashboard_input_hint_translation_text"
                            android:inputType="textPersonName"
                            android:text="@={myViewModel.inputTranslationText}"
                            style="@style/TextAppearance.LangLearnApp.PhraseCreationEditText"
                            />

                        <TextView
                            android:id="@+id/notes_text_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="15dp"
                            android:ems="10"
                            android:text="@string/dashboard_input_title_notes"
                            android:textSize="12sp"
                            style="@style/TextAppearance.LangLearnApp.PhraseCreationTitleText"
                            />

                        <EditText
                            android:id="@+id/notes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="15dp"
                            android:layout_marginBottom="5dp"
                            android:ems="10"
                            android:hint="@string/dashboard_input_hint_notes"
                            android:inputType="textPersonName"
                            android:text="@={myViewModel.inputNotes}"
                            style="@style/TextAppearance.LangLearnApp.PhraseCreationEditText"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/save_or_update_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:onClick="@{()->myViewModel.saveOrUpdate()}"
                                android:text="@{context.getString(myViewModel.saveOrUpdateButtonText)}"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                            <!--                        android:text="@={myViewModel.saveOrUpdateButtonText}"-->

                            <Button
                                android:id="@+id/clear_all_or_delete_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:onClick="@{()->myViewModel.clearAllOrDelete()}"
                                android:text="@{context.getString(myViewModel.clearAllOrDeleteButtonText)}"
                                android:textSize="18sp"
                                android:textStyle="bold" />


                        </LinearLayout>

                    </LinearLayout>

                </ScrollView>
            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/phrase_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="0dp"
                android:layout_weight="1" />
        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            android:onClick="@{()->myViewModel.resetAndShowInputForm()}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@android:drawable/ic_dialog_email" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>