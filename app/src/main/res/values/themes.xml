<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimarySurface">@color/colorAccent</item>
        <item name="colorPrimaryVariant">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/colorAccent</item>
        <item name="colorOnSurface">@color/colorAccent</item>
        <item name="colorAccent">@color/colorNeutralBlue</item>

        <!-- Text appearances -->
        <item name="textAppearanceListItem">@style/TextAppearance.LangLearnApp.ListPrimary</item>

    </style>

    <!-- declare the theme name that's actually applied in the manifest file -->
    <style name="AppTheme" parent="BaseAppTheme" />

</resources>
